@model IEnumerable<Forum.Models.Question>

@{
    ViewData["Title"] = "Index";
}

<h1>All discussion topics</h1>



@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
    </p>
}

<div class="container">
    <table class="table table-striped">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Posted by</th>
            <th>Total Answer</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.User.UserName</td>
                <td>@item.Answers.Count</td>
                <td>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Update</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>

